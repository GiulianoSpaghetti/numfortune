<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="numfortune.MainPage"
             Title="Application">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Editor x:Name="lblFortune" IsReadOnly="True" AutoSize="TextChanges"/>
            <Button Text="Refresh" Clicked="OnRefresh_Click" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
